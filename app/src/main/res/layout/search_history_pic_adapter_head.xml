<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/main_theme_color" />


    <android.support.v7.widget.CardView
        android:id="@+id/cv_tab_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        card_view:cardElevation="2px"
        android:layout_marginTop="@dimen/d50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_search_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/d16"
                android:textColor="@color/main_theme_color"
                android:textStyle="bold"
                android:text="热门搜索"/>

            <cn.lankton.flowlayout.FlowLayout
                android:id="@+id/flowlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:lineSpacing="10dp"
                app:maxLine="3"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tv_no_history"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="暂无搜索记录"
        android:textSize="@dimen/d15"
        android:textColor="#c5c5c5"/>
</LinearLayout>
